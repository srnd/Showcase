-extends "template.haml"
-import "widgets.haml" as widgets
-block section
  event
-block page
  wrapup
-block title
  #{__('common.nav.wrapup')}
-block content
  -for event in events
    %article.event
      %h2
        %a(href="#{route('event', {'batch': event.batch, 'event': event})}") CodeDay #{event.Name} #{event.Batch.Name}

      %section.photos
        -for photo in event.Photos
          #{widgets.photo(false, event.batch, event, photo)}

      %section.teams.full
        -for team in event.Teams
          #{widgets.team(false, batch, event, team)}

  %link(rel="stylesheet" href="/assets/js/justifiedGallery.min.css")
  %script(src="/assets/js/jquery.js")
  %script(src="/assets/js/jquery.justifiedGallery.min.js")
  :javascript
    $("section.photos").justifiedGallery({rowHeight: 175, maxRowHeight: 300, margins: 6, border: 0});
